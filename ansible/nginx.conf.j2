# {{ ansible_managed }}
# Last run: {{ template_run_date }}


upstream gunicorn-admin {
    server localhost:{{ gunicorn_port }};
}

server {
    listen 80;
    server_name {{ tgwf_domain_name }}.thegreenwebfoundation.org;
    keepalive_timeout 5;
    return 301 https://$server_name$request_uri;
}

server {
    listen 85.17.184.227:443 ssl http2;
    server_name {{ tgwf_domain_name }}.thegreenwebfoundation.org;

    access_log /var/log/nginx/{{ tgwf_domain_name }}.thegreenwebfoundation.org-access.log;
    error_log /var/log/nginx/{{ tgwf_domain_name }}.thegreenwebfoundation.org-error.log;

    keepalive_timeout 5;

    ssl                  on;
    ssl_certificate /etc/letsencrypt/live/thegreenwebfoundation.org-0001/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/thegreenwebfoundation.org-0001/privkey.pem; # managed by Certbot
    ssl_trusted_certificate /etc/letsencrypt/live/api.thegreenwebfoundation.org/chain.pem;

    ssl_protocols        TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';

    ssl_dhparam /etc/ssl/certs/dhparam.pem;



    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location /static/ {
        root "{{ project_root }}/current/";
    }

    location @proxy_to_app {
        proxy_set_header           X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header           X-Forwarded-Proto $scheme;
		proxy_set_header           Host $host;
		#                          we don't want nginx trying to do something clever with
		#                          redirects, we set the Host: header above already.
		proxy_redirect             off;
        proxy_pass http://gunicorn-admin;
    }

    location / {
		try_files                  $uri @proxy_to_app;
	}

}

